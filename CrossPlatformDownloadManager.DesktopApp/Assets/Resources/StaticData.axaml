<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Corner Radius -->
    <CornerRadius x:Key="DefaultCornerRadius">8</CornerRadius>

    <!-- Font size -->
    <x:Double x:Key="DefaultFontSize">14</x:Double>
    <x:Double x:Key="LargeFontSize">18</x:Double>

    <!-- Line Height -->
    <x:Double x:Key="DefaultLineHeight">16</x:Double>
    <x:Double x:Key="LargeLineHeight">21</x:Double>

    <!-- Icon size -->
    <x:Double x:Key="SmallIconSize">16</x:Double>
    <x:Double x:Key="MediumIconSize">32</x:Double>
    <x:Double x:Key="LargeIconSize">64</x:Double>
</ResourceDictionary>